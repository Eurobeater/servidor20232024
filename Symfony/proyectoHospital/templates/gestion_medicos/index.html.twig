{% extends 'base.html.twig' %}

{% block title %}Medico index{% endblock %}

{% block body %}
    <h1>Medico index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
                <td>{{ medico.id }}</td>
                <td>{{ medico.nombre }}</td>
                <td>
                    <a href="{{ path('app_gestion_medicos_show', {'id': medico.id}) }}">show</a>
                    <a href="{{ path('app_gestion_medicos_edit', {'id': medico.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestion_medicos_new') }}">Create new</a>
{% endblock %}
